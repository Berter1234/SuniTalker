<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/global_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"/>
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/ic_arrow_into"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:text="@string/mine_my_account"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white_10"/>

    <TextView
        android:id="@id/tv_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_theme"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/ic_arrow_into"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:text="@string/mine_theme"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white_10"/>

    <TextView
        android:id="@id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_about"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/ic_arrow_into"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:text="@string/mine_my_about"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white_10"/>

    <TextView
        android:id="@id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_close"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/ic_arrow_into"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:text="@string/mine_login_back"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white_10"/>
</LinearLayout>
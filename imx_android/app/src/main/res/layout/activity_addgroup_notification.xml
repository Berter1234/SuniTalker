<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@id/title_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@null"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="加群申请"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_jion_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translate"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <com.silver.chat.view.CircleImageView
            android:id="@id/iv_avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            app:civ_border_width="@dimen/dp_1"
            app:civ_border_color="@color/white_10"
            android:src="@drawable/system_head_portrait"/>

        <TextView
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iv_avatar"
            android:singleLine="true"
            android:text="张拉拉"
            android:textColor="@color/white"
            android:textSize="@dimen/font_15"/>

        <ImageView
            android:id="@+id/iv_jion_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/right_in_img"/>

        <TextView
            android:id="@+id/tv_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="注册电话 +18610927144"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_12"
            android:layout_below="@+id/tv_name"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/iv_avatar"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/iv_avatar"
            android:background="@color/white_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_applyjion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请加入"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_14"/>
        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京大人群"
            android:textColor="@color/white"
            android:textSize="@dimen/font_15"
            android:layout_toRightOf="@+id/tv_applyjion"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_apply_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="67dp"
            android:text="大家好，我是张拉拉"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_13"
            />
        <TextView
            android:id="@+id/tv_isagreen_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="67dp"
            android:text="已同意"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_13"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_isadd_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/seach_bg"
            android:scaleType="fitXY"
            android:text="同意"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tv_no_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/seach_bg"
            android:scaleType="fitXY"
            android:text="忽略，删除"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_chat_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llay_one"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_scan_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_40"
            android:drawableTop="@drawable/ic_scan"
            android:gravity="center_horizontal"
            android:text="@string/global_scan"/>

        <TextView
            android:id="@+id/tv_search_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:drawableTop="@drawable/ic_search"
            android:gravity="center_horizontal"
            android:text="@string/global_search"/>

        <TextView
            android:id="@+id/start_group_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_40"
            android:drawableTop="@drawable/start_group_chat"
            android:gravity="center_horizontal"
            android:text="@string/global_creat_group_chat"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/llay_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:layout_above="@+id/iv_back_chat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:drawableTop="@drawable/add_friend"
            android:gravity="center_horizontal"
            android:text="@string/global_add_friend"/>

        <TextView
            android:id="@+id/tv_search_group"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:drawableTop="@drawable/search_group"
            android:gravity="center_horizontal"
            android:text="@string/global_find_group"/>

        <TextView
            android:id="@+id/tv_more_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_40"
            android:drawableTop="@drawable/more_more"
            android:gravity="center_horizontal"
            android:text="@string/global_chat_more"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:padding="@dimen/dp_15"
        android:src="@drawable/ic_back_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
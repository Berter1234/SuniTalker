<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/translate"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">
        <com.silver.chat.view.CircleImageView
            android:id="@+id/iv_group_avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            app:civ_border_width="@dimen/dp_1"
            app:civ_border_color="@color/white_10"
            android:src="@drawable/quntongzhi"/>

        <TextView
            android:id="@+id/tv_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_11"
            android:singleLine="true"
            android:text="2016/11/16"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_11"/>

        <LinearLayout
            android:id="@id/lly_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@id/tv_group_time"
            android:layout_toRightOf="@id/iv_group_avatar"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:singleLine="true"
                android:text="群通知"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/shape_bg_blue"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/global_group"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10"/>

        </LinearLayout>


        <ImageView
            android:id="@id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_group_avatar"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_group_time"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_notification"/>

        <TextView
            android:id="@+id/tv_group_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lly_name"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toLeftOf="@id/iv_notification"
            android:layout_toRightOf="@id/iv_group_avatar"
            android:singleLine="true"
            android:text="XXX 退出群 XXX"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_12"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/iv_group_avatar"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/iv_group_avatar"
            android:background="@color/white_10"
            />

    </RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/purple_theme">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主色调"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/circlr_bg_small"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/circlr_bg_big"/>

        <ImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_gravity="center"
            android:background="@drawable/circlr_bg_center"/>

        <com.silver.chat.view.CircleImageView
            android:id="@id/iv_avatar"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:src="@drawable/system_head"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/black_theme"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/black_theme"
            android:layout_marginLeft="@dimen/dp_10"/>
        <Button
            android:id="@+id/blue_theme"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/blue_theme"
            android:layout_marginLeft="@dimen/dp_10"/>
        <Button
            android:id="@+id/green_theme"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/green_theme"
            android:layout_marginLeft="@dimen/dp_10"/>
        <Button
            android:id="@+id/red_theme"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/red_theme"
            android:layout_marginLeft="@dimen/dp_10"/>
        <Button
            android:id="@+id/purple_theme"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/purple_theme"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/preservation_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/preservation_theme"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        />

</LinearLayout>
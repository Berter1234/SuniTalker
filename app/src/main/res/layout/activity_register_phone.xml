<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/reg_bg"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tv_guidance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="第三方授权登录"
            android:textColor="@color/txt_font_one_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_party_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/qq"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/qq" />

        <ImageView
            android:id="@id/xinlang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/xinlang" />

        <ImageView
            android:id="@id/weixin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/weixin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/third_party_login"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_party_login"
            android:layout_marginTop="80dp"
            android:text="或者"
            android:textColor="@color/common_line_one_color"
            android:textSize="16sp" />


        <!--<com.silver.chat.view.MyLineEditText-->
            <!--android:id="@id/user_phone"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tv_or"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginStart="20dp"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:background="@null"-->
            <!--android:gravity="center"-->
            <!--android:hint="请输入手机号"-->
            <!--android:padding="@dimen/dp_10"-->
            <!--android:textColor="@color/white"-->
            <!--android:textColorHint="@color/txt_font_one_color"-->
            <!--android:textCursorDrawable="@null"-->
            <!--android:textSize="14sp" />-->

        <FrameLayout
            android:id="@+id/frame_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_or"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp">

            <!--<com.silver.chat.view.MyLineEditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:enabled="false" />-->

            <com.silver.chat.view.MyLineEditText
                android:id="@id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_or"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入手机号"
                android:numeric="integer"
                android:padding="@dimen/dp_10"
                android:textColor="@color/white"
                android:textColorHint="@color/txt_font_one_color"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </FrameLayout>

        <Button
            android:id="@id/btn_auth_code"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/frame_edt"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_verification_code_shape"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="16.0sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@id/return_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="⇤返回登录"
            android:textColor="@color/common_line_one_color"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>

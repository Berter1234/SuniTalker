<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/purple_theme"
              android:orientation="vertical">

    <com.silver.chat.view.SearchLayout
        android:id="@id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/global_chat_record"
        android:textColor="@color/white_8a"
        android:textSize="@dimen/font_12"/>

    <com.silver.chat.view.recycleview.pulltorefreshable.WSRecyclerView
        android:id="@id/recyle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
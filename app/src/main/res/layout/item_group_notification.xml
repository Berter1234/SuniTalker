<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_jion_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translate"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <com.silver.chat.view.CircleImageView
            android:id="@id/iv_avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_7"
            app:civ_border_width="@dimen/dp_1"
            app:civ_border_color="@color/white_10"
            android:src="@drawable/system_head_portrait"/>

        <TextView
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_avatar"
            android:singleLine="true"
            android:text="张拉拉"
            android:textColor="@color/white"
            android:textSize="@dimen/font_15"/>

        <TextView
            android:id="@+id/iv_agree"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_invite_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请你加入  北京达人群"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tv_name"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name" />
        <TextView
            android:id="@+id/tv_process_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大家好，我事XXX/处理人：XXX"
            android:textColor="@color/chat_time"
            android:textSize="@dimen/font_10"
            android:layout_below="@+id/tv_invite_group"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@id/iv_avatar"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/iv_avatar"
            android:background="@color/white_10"
            />
    </RelativeLayout>

</LinearLayout>
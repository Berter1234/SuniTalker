<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_chat"
    android:orientation="vertical">

    <TextView
        android:id="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/global_qr_code"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />

    <TextView
        android:id="@id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:text="沈梦晨"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        />


    <ImageView
        android:id="@id/iv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:src="@drawable/ic_code_scan"/>

    <ImageView
        android:id="@id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:src="@drawable/ic_back_white"/>

    <ImageView
        android:id="@id/iv_code"
        android:layout_width="@dimen/dp_255"
        android:layout_height="@dimen/dp_255"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle_white"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/iv_avatar"
        android:layout_centerHorizontal="true" />

    <com.silver.chat.view.CircleImageView
        android:id="@id/iv_avatar"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="12dp"
        android:src="@drawable/default_badged_count_bg"
        app:civ_border_color="@color/white_10"
        app:civ_border_width="@dimen/dp_1"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/message_layout_timecontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/message_timestamp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center">

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-06 10:19"
                android:textColor="@color/chat_time"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:layout_below="@+id/message_layout_timecontainer"
        android:paddingTop="@dimen/dp_20">

        <RelativeLayout
            android:id="@+id/chat_friend_left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_70"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:orientation="horizontal">

            <com.silver.chat.view.CircleImageView
                android:id="@+id/message_friend_userphoto"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/ic_contact_portrait" />


            <com.silver.chat.view.BubbleImageView
                android:id="@+id/friend_message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/message_friend_userphoto"
                android:layout_toRightOf="@+id/message_friend_userphoto"
                android:adjustViewBounds="true"
                android:maxHeight="150dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:scaleType="fitCenter"
                app:bubble_angle="10dp"
                app:bubble_arrowHeight="10dp"
                app:bubble_arrowLocation="left"
                app:bubble_arrowOffset="-5dp"
                app:bubble_arrowTop="20dp"
                app:bubble_arrowWidth="8dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_user_right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginStart="@dimen/dp_70"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:orientation="horizontal">

            <com.silver.chat.view.CircleImageView
                android:id="@+id/message_user_userphoto"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_contact_portrait" />
            <com.silver.chat.view.BubbleImageView
                android:id="@+id/user_message_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/message_user_userphoto"
                android:layout_alignTop="@+id/message_user_userphoto"
                android:adjustViewBounds="true"
                android:maxHeight="150dp"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:scaleType="fitCenter"
                app:bubble_angle="10dp"
                app:bubble_arrowHeight="10dp"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="-5dp"
                app:bubble_arrowTop="20dp"
                app:bubble_arrowWidth="8dp"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@id/title_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="NAME"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5" />

        </LinearLayout>


        <ImageView
            android:id="@id/title_right_video"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/title_right_voice"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/title_right_voice"
            android:layout_toStartOf="@+id/title_right_voice"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@id/title_right_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back" />

    </RelativeLayout>


    <TextView
        android:id="@+id/chatInputHalving"
        android:layout_width="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_height="1px"
        android:background="@color/txt_font_one_color"/>


</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_recyle_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.silver.chat.view.TitleBarView
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/chatLayoutMsg"
            android:layout_below="@id/title_bar"
            android:layout_weight="1"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@id/show_contact_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/round_three"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:layout_above="@+id/round_two"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:src="@drawable/round_three_im" />

                <ImageView
                    android:id="@+id/round_two"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_above="@+id/round_one"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:src="@drawable/round_two_im" />

                <ImageView
                    android:id="@+id/round_one"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_above="@+id/my_round_head_border"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/round_one_im" />


                <ImageView
                    android:id="@+id/my_round_head_border"
                    android:layout_width="@dimen/dp_126"
                    android:layout_height="@dimen/dp_126"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/reg_verification_code_shape" />

                <com.silver.chat.view.CircleImageView
                    android:id="@id/my_round_head"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/system_head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_round_head_border"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="准备开始聊天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_15" />

            </RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/txt_font_one_color"
                android:visibility="gone" />

            <com.silver.chat.view.recycleview.pulltorefreshable.WSRecyclerView
                android:id="@id/recyle_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:divider="@null"
                android:padding="@dimen/dp_10"
                android:soundEffectsEnabled="true" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@id/chat_btn_emote"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/ic_chat_emote" />

                <EditText
                    android:id="@id/chat_edit_input"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入一条消息"
                    android:imeOptions="flagNoExtractUi"
                    android:maxHeight="@dimen/dp_100"
                    android:maxLength="4000"
                    android:minHeight="@dimen/dp_46"
                    android:textColor="@color/white"
                    android:textColorHint="@color/contact_textcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/font_12" />

                <ImageButton
                    android:id="@id/chat_send_msg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/dp_50"
                    android:src="@drawable/char_send_im" />


            </LinearLayout>

            <View
                android:id="@+id/chatInputHalving"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/txt_font_one_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:src="@drawable/camera_btn" />


                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:src="@drawable/pvr_btn" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:src="@drawable/file_btn" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:src="@drawable/microphone_btn" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15"
                    android:src="@drawable/more_btn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/flEmotionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--表情区-->
        <com.lqr.emoji.EmotionLayout
            android:id="@+id/elEmotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <!--其他功能-->
    </FrameLayout>

</LinearLayout>